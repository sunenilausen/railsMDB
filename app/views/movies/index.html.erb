<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Picture</th>
      <th>Media</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.genre %></td>
        <td><%= image_tag(movie.picture, :alt => movie.title, :width => "50px", :height => "80px") %></td>
        <td><%= movie.media %></td>
        <td><%= movie.rating %></td>
        <td><%= button_to 'Show', movie, :class => "btn btn-default", :method => :get  %></td>
        <td><%= button_to 'Edit', edit_movie_path(movie), :class => "btn btn-primary", :method => :get  %></td>
        <td><%= button_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Movie', new_movie_path, :class => "btn btn-default", :method => :get  %>
